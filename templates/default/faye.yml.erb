---
chdir: <%= @dir %>
environment: <%= @environment %>
address: 0.0.0.0
port: <%= @port %>
<% if @environment == "production" %>
ssl: true
ssl_key_file: <%= @ssl_key %>
ssl_cert_file: <%= @ssl_cert %>
<% else %>
ssl: false
<% end %>
timeout: 30
log: log/thin.log
pid: tmp/pids/thin.pid
max_conns: 1024
max_persistent_conns: 512
require: []
wait: 30
daemonize: true
rackup: <%= @rackup %>
